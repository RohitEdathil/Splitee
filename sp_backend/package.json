{
  "name": "sp_backend",
  "version": "1.0.0",
  "description": "API for the cost splitting app",
  "main": "index.ts",
  "scripts": {
    "build": "npm install && npx prisma generate && tsc",
    "start": "nodemon ./dist/index.js",
    "dev": "npx prisma generate && nodemon --exec npx ts-node -- ./src/index.ts",
    "prod": "npm run build && npm run start",
    "clean": "rm -rf node_modules coverage dist .nyc_output",
    "lint": "tslint -t stylish --project \"tsconfig.json\""
  },
  "author": "Rohit V",
  "license": "ISC",
  "dependencies": {
    "@datastructures-js/heap": "4.3.1",
    "@prisma/client": "4.11.0",
    "bcrypt": "5.1.0",
    "body-parser": "^1.18.3",
    "dotenv": "16.0.3",
    "express": "^4.17.1",
    "express-validator": "6.15.0",
    "jsonwebtoken": "9.0.0",
    "morgan": "1.10.0"
  },
  "devDependencies": {
    "@types/bcrypt": "5.0.0",
    "@types/dotenv": "8.2.0",
    "@types/express": "^4.16.0",
    "@types/jsonwebtoken": "9.0.1",
    "@types/node": "18.15.0",
    "nodemon": "2.0.21",
    "prisma": "4.11.0",
    "ts-node": "^10.4.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^4.5.4"
  },
  "nodemonConfig": {
    "ext": "js,json,ejs,jpg,png,gif,svg,css,html,ts,env",
    "watch": [
      "src",
      "dist"
    ]
  },
  "optionalDependencies": {
    "fsevents": "2.3.2"
  }
}
